#toc {
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1.5em;
}
#viewer {
    max-width: 672px;
    margin: 0 auto;
}
.pager-container {
    text-align: center;
    margin-top: 5px;
    margin-bottom: 44px;
}
.pager {
    display: inline-block;
    opacity: 0.8;
    padding: 22px;
    
    font-size: 44px;
    font-family: 'system-ui';
    font-weight: bold;
    cursor: pointer;
    -webkit-user-select: none;
    user-select: none;
    text-decoration: none;
}
.pager:hover {
    opacity: 1;
}
